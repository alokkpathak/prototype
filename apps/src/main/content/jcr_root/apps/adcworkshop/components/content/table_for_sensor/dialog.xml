<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Header Fields">
                <items jcr:primaryType="cq:WidgetCollection">
                    <headerdesc
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Heading of the Table"
                        name="./headingoftable"
                        xtype="textfield"/>
                    <header1
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Header 1"
                        name="./header1"
                        xtype="textfield"/>
                    <header2
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Header 2"
                        name="./header2"
                        xtype="textfield"/>
                    <header3
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Header 3"
                        name="./header3"
                        xtype="textfield"/>
                </items>
            </tab1>
            <tab2
                jcr:primaryType="cq:Panel"
                title="Table Description">
                <items jcr:primaryType="cq:WidgetCollection">
                    <multirows
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Click the '+' to add a new image"
                        fieldLabel="Row Information"
                        name="./multirows"
                        xtype="mtmulticompositefield">
                        <listeners jcr:primaryType="nt:unstructured"/>
                        <fieldConfigs jcr:primaryType="cq:WidgetCollection">
                            <row1
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Row -1"
                                name="row1"
                                xtype="textarea"/>
                            <row2
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Row -2"
                                name="row2"
                                xtype="textarea"/>
                            <row3
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Row -3"
                                name="row3"
                                xtype="textarea"/>
                            <rowspan
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Row Span"
                                name="rowsp"
                                type="select"
                                width="{Long}100"
                                xtype="selection">
                                <options jcr:primaryType="cq:WidgetCollection">
                                    <zero
                                        jcr:primaryType="nt:unstructured"
                                        text="0"
                                        value="0"/>
                                    <one
                                        jcr:primaryType="nt:unstructured"
                                        text="1"
                                        value="1"/>
                                    <two
                                        jcr:primaryType="nt:unstructured"
                                        text="2"
                                        value="2"/>
                                    <three
                                        jcr:primaryType="nt:unstructured"
                                        text="3"
                                        value="3"/>
                                    <four
                                        jcr:primaryType="nt:unstructured"
                                        text="4"
                                        value="4"/>
                                    <five
                                        jcr:primaryType="nt:unstructured"
                                        text="5"
                                        value="5"/>
                                </options>
                            </rowspan>
                        </fieldConfigs>
                    </multirows>
                </items>
            </tab2>
        </items>
    </items>
</jcr:root>
