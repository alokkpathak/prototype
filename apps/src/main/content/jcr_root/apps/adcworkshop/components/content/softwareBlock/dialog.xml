<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Download"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="General Options">
                <items jcr:primaryType="cq:WidgetCollection">
                    <headline
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Headline"
                        name="./headline"
                        xtype="textfield"/>
                    <description
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Description"
                        name="./description"
                        xtype="richtext">
						<rtePlugins
                            jcr:primaryType="nt:unstructured"
                            features="*">
                            <paraformat
                                jcr:primaryType="nt:unstructured"
                                features="*">
                                <formats jcr:primaryType="cq:WidgetCollection">
                                    <h1
                                        jcr:primaryType="nt:unstructured"
                                        description="Heading1"
                                        tag="h1"/>
                                    <h2
                                        jcr:primaryType="nt:unstructured"
                                        description="Heading2"
                                        tag="h2"/>
                                    <h3
                                        jcr:primaryType="nt:unstructured"
                                        description="Heading3"
                                        tag="h3"/>
                                    <h4
                                        jcr:primaryType="nt:unstructured"
                                        description="Heading4"
                                        tag="h4"/>
                                    <p
                                        jcr:primaryType="nt:unstructured"
                                        description="paragraph"
                                        tag="p"/>
                                </formats>
                            </paraformat>
                            <misctools
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <colorpicker
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <styles
                                jcr:primaryType="nt:unstructured"
                                features="*">
                                <styles jcr:primaryType="cq:WidgetCollection">
                                    <style1
                                        jcr:primaryType="nt:unstructured"
                                        cssName="text-center"
                                        text="Text-center"/>
                                    <style2
                                        jcr:primaryType="nt:unstructured"
                                        cssName="font12"
                                        text="font-size-12px"/>
                                    <style3
                                        jcr:primaryType="nt:unstructured"
                                        cssName="note"
                                        text="note"/>
                                    <style4
                                        jcr:primaryType="nt:unstructured"
                                        cssName="first"
                                        text="first"/>
                                    <style5
                                        jcr:primaryType="nt:unstructured"
                                        cssName="ref"
                                        text="ref"/>
                                    <style6
                                        jcr:primaryType="nt:unstructured"
                                        cssName="ref middle"
                                        text="ref middle"/>
                                </styles>
                            </styles>
							<subsuperscript
								jcr:primaryType="nt:unstructured"
								features="*"/>
                        </rtePlugins>
					</description>
					
					<text1
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Button Text"
                        name="./text1"
                        xtype="textfield"/>
                    <accessabilitytab
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Field Label for Opens a Modal Text"
                        name="./opensmodal"
                        width="{Long}300"
                        xtype="textfield"/>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
