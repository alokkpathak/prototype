<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Tab 1">
                <items jcr:primaryType="cq:WidgetCollection">
                    <multi
                        jcr:primaryType="cq:Widget"
                        baseName="image_"
                        fieldLabel="Image and text"
                        name="./imagetext"
                        xtype="mtmulticompositefield">
                        <fieldConfigs jcr:primaryType="cq:WidgetCollection">
                            <path
                                jcr:primaryType="cq:Widget"
                                allowBlank="false"
                                fieldLabel="Image Path for desktop"
                                name="path"
                                width="300"
                                xtype="pathfield"/>
							<pathMobile
                                jcr:primaryType="cq:Widget"
                                allowBlank="false"
                                fieldLabel="Image Path for mobile"
                                name="pathMobile"
                                width="300"
                                xtype="pathfield"/>
                            <text
                                jcr:primaryType="cq:Widget"
                                allowBlank="false"
                                fieldLabel="Image text"
                                name="text"
                                width="300"
                                xtype="textfield"/>
                            <altimage
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Enter the text for Image alt"
                                name="imagealt"
                                xtype="textfield"/>
                        </fieldConfigs>
                    </multi>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
